EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=your-email@provider.com

# Frontend settings
FRONTEND_URL=https://yourdomain.com

# CORS settings
CORS_ALLOW_ALL_ORIGINS=False
